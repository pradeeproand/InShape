<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailsInfo"
    android:background="@color/colorback">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/exercise_gif"
        android:layout_width="454dp"
        android:layout_height="222dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/exercise_title"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="exercise_title"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/exercise_gif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exercise_description_details"
        android:layout_width="365dp"
        android:layout_height="219dp"
        android:text="exercise_description"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_gif"
        app:layout_constraintVertical_bias="0.346" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="141dp"
        android:layout_height="43dp"
        android:background="@drawable/round_shape"
        android:text="Play"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="@color/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_description_details" />

</androidx.constraintlayout.widget.ConstraintLayout>