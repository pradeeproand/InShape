<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start_activity"
    android:background="@color/colorback">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/exercise_gif_start"
        android:layout_width="482dp"
        android:layout_height="239dp"
        android:fadingEdge="horizontal"
        android:src="@drawable/ready"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="113dp"
        android:layout_height="78dp"
        android:text="00"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_gif_start"
        app:layout_constraintVertical_bias="0.32"
        tools:ignore="MissingConstraints,RtlCompat"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/teller"
        android:layout_width="182dp"
        android:layout_height="49dp"
        android:background="@drawable/round_shape"
        android:gravity="center_vertical"
        android:text="Next"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:textColor="@color/ic_launcher_background"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer"
        app:layout_constraintVertical_bias="0.522"
        tools:ignore="MissingConstraints,RtlCompat" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="serif-monospace"
        android:gravity="center_horizontal"
        android:text="Click next to start"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/exercise_gif_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>